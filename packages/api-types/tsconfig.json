{
  "compilerOptions": {
    "outDir": "./lib",
    "esModuleInterop": true,
    "target": "ES2019",
    "module": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "lib": ["ES2019"],
    "strict": false,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "lib"],
  "include": ["src"]
}
